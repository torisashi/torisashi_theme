<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title><%= current_article.title unless current_article.nil? %> - トリサシ日記</title>
    <meta name="description" content="<%= current_article.data.desc unless current_article.data.desc.nil?%>">
    <%= stylesheet_link_tag 'style' %>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body>
    <div class="container">
      <%= partial 'header' %>
      <div class="content" role="main">
        <article class="post post--single">
          <p class="post__time"><%= current_article.date.strftime('%Y.%m.%d') %></p>
          <h2 class="post__title"><%= current_article.title %></h2>
          <section class="post__body">
          <%= yield %>
          </section>
        </article>
      </div>
    
    </div>
    <%= partial "footer" %>
  </body>
</html>
